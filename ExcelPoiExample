import org.apache.poi.ss.usermodel.*; // ì…€, ì‹œíŠ¸, ì›Œí¬ë¶ ë“±ì˜ í´ë˜ìŠ¤
import org.apache.poi.xssf.usermodel.XSSFWorkbook; // .xlsx í˜•ì‹ ì›Œí¬ë¶
import org.apache.poi.ss.util.CellRangeAddress; // ì…€ ë³‘í•©ìš©

import java.io.FileOutputStream; // íŒŒì¼ ì¶œë ¥ìš©
import java.util.ArrayList;
import java.util.List;

public class ExcelPagingExample {

    public static void main(String[] args) throws Exception {
        Workbook workbook = new XSSFWorkbook(); // ì›Œí¬ë¶ ìƒì„± (XLSX í˜•ì‹)
        Sheet sheet = workbook.createSheet("Report"); // ì‹œíŠ¸ ìƒì„±

        // 1~35ë²ˆê¹Œì§€ì˜ ë°ì´í„° ìƒ˜í”Œ ìƒì„± (ê° í–‰ì€ 7ê°œì˜ ê°’)
        List<String[]> dataList = new ArrayList<>();
        for (int i = 1; i <= 35; i++) {
            // í…ŒìŠ¤íŠ¸: Gì—´ì— ê¸´ í…ìŠ¤íŠ¸ ì‚½ì… (5ê°œë§ˆë‹¤ í•œ ë²ˆì”©)
            String longText = (i % 5 == 0)
                    ? "ì´ê²ƒì€ ë§¤ìš° ê¸´ ì…€ ë‚´ìš©ì…ë‹ˆë‹¤. ì¤„ë°”ê¿ˆì´ ë˜ì–´ì•¼ í•˜ë©°, ì…€ ë„ˆë¹„ë¥¼ ë„˜ìœ¼ë©´ ìë™ìœ¼ë¡œ ì¤„ì´ ë°”ë€Œê³  í–‰ ë†’ì´ë„ ì¡°ì ˆë©ë‹ˆë‹¤."
                    : "Data" + i + "-7";

            dataList.add(new String[]{
                "Data" + i + "-1", "Data" + i + "-2", "Data" + i + "-3",
                "Data" + i + "-4", "Data" + i + "-5", "Data" + i + "-6", longText
            });
        }

        // íƒ€ì´í‹€ ìŠ¤íƒ€ì¼ (ê°€ìš´ë° ì •ë ¬, êµµì€ ê¸€ì”¨, í° í°íŠ¸)
        CellStyle titleStyle = workbook.createCellStyle();
        Font titleFont = workbook.createFont();
        titleFont.setBold(true);
        titleFont.setFontHeightInPoints((short) 16);
        titleStyle.setFont(titleFont);
        titleStyle.setAlignment(HorizontalAlignment.CENTER);

        // í˜ì´ì§€ ë²ˆí˜¸ ìŠ¤íƒ€ì¼ (ì˜¤ë¥¸ìª½ ì •ë ¬)
        CellStyle pageStyle = workbook.createCellStyle();
        pageStyle.setAlignment(HorizontalAlignment.RIGHT);

        // í—¤ë” ìŠ¤íƒ€ì¼ (ê°€ìš´ë° ì •ë ¬, êµµì€ ê¸€ì”¨, ì•„ë˜ í…Œë‘ë¦¬)
        CellStyle headerStyle = workbook.createCellStyle();
        Font headerFont = workbook.createFont();
        headerFont.setBold(true);
        headerStyle.setFont(headerFont);
        headerStyle.setAlignment(HorizontalAlignment.CENTER);
        headerStyle.setBorderBottom(BorderStyle.THIN);

        // ì¼ë°˜ ë°ì´í„° ì…€ ìŠ¤íƒ€ì¼ (ì™¼ìª½ ì •ë ¬)
        CellStyle dataStyle = workbook.createCellStyle();
        dataStyle.setAlignment(HorizontalAlignment.LEFT);

        // 7ë²ˆì§¸ ì…€ ì „ìš© ì¤„ë°”ê¿ˆ ìŠ¤íƒ€ì¼ (ì™¼ìª½ + ìœ„ìª½ ì •ë ¬ + ì¤„ë°”ê¿ˆ)
        CellStyle wrapStyle = workbook.createCellStyle();
        wrapStyle.setWrapText(true); // ì¤„ë°”ê¿ˆ í—ˆìš©
        wrapStyle.setAlignment(HorizontalAlignment.LEFT); // ìˆ˜í‰: ì™¼ìª½
        wrapStyle.setVerticalAlignment(VerticalAlignment.TOP); // ìˆ˜ì§: ìœ„ìª½

        // í—¤ë” ëª…ì¹­ ë°°ì—´
        String[] headers = {"Header1", "Header2", "Header3", "Header4", "Header5", "Header6", "Header7"};

        int rowIndex = 0;     // í˜„ì¬ í–‰ ë²ˆí˜¸ ì¶”ì 
        int pageNumber = 1;   // í˜ì´ì§€ ë²ˆí˜¸ ì¶”ì 

        // ë°ì´í„° ì „ì²´ ë°˜ë³µ
        for (int i = 0; i < dataList.size(); i++) {
            // 20ê°œë§ˆë‹¤ ìƒˆë¡œìš´ í˜ì´ì§€ êµ¬ì„±
            if (i % 20 == 0) {
                if (i != 0) rowIndex++; // í˜ì´ì§€ ì‚¬ì´ì— ë¹ˆ ì¤„

                sheet.createRow(rowIndex++); // â‘  ë¹ˆ í–‰

                // â‘¡ íƒ€ì´í‹€ í–‰ (C~E ì—´ ë³‘í•©)
                Row titleRow = sheet.createRow(rowIndex++);
                Cell titleCell = titleRow.createCell(2); // Cì—´
                titleCell.setCellValue("Excel Report Title"); // íƒ€ì´í‹€ í…ìŠ¤íŠ¸
                titleCell.setCellStyle(titleStyle); // ìŠ¤íƒ€ì¼ ì ìš©
                sheet.addMergedRegion(new CellRangeAddress(
                        titleRow.getRowNum(), titleRow.getRowNum(), 2, 4)); // C~E ë³‘í•©

                // â‘¢ í˜ì´ì§€ ë²ˆí˜¸ (Gì—´ = 6ë²ˆ ì¸ë±ìŠ¤)
                Row pageRow = sheet.createRow(rowIndex++);
                Cell pageCell = pageRow.createCell(6);
                pageCell.setCellValue("Page " + pageNumber++); // í˜ì´ì§€ í…ìŠ¤íŠ¸
                pageCell.setCellStyle(pageStyle);

                // â‘£ í—¤ë” í–‰
                Row headerRow = sheet.createRow(rowIndex++);
                for (int j = 0; j < headers.length; j++) {
                    Cell headerCell = headerRow.createCell(j);
                    headerCell.setCellValue(headers[j]);
                    headerCell.setCellStyle(headerStyle); // í—¤ë” ìŠ¤íƒ€ì¼ ì ìš©
                }
            }

            // â‘¤ ë°ì´í„° í–‰ ìƒì„±
            Row dataRow = sheet.createRow(rowIndex++);
            String[] rowData = dataList.get(i);

            for (int j = 0; j < rowData.length; j++) {
                Cell dataCell = dataRow.createCell(j); // ì…€ ìƒì„±
                dataCell.setCellValue(rowData[j]);     // ë°ì´í„° ê°’ ì„¤ì •

                // 7ë²ˆì§¸ ì…€(Gì—´)ë§Œ ì¤„ë°”ê¿ˆ ìŠ¤íƒ€ì¼ ì ìš©
                if (j == 6) {
                    dataCell.setCellStyle(wrapStyle);
                } else {
                    dataCell.setCellStyle(dataStyle);
                }
            }
        }

        // ì»¬ëŸ¼ ë„ˆë¹„ ìë™ ì¡°ì • (1~7ì—´)
        for (int i = 0; i < 7; i++) {
            sheet.autoSizeColumn(i); // ìë™ ë„ˆë¹„ ì¡°ì •
        }

        // Gì—´ì€ ë„ˆë¹„ê°€ ë„ˆë¬´ ì‘ì„ ìˆ˜ ìˆì–´ ìˆ˜ë™ìœ¼ë¡œ ë„‰ë„‰í•˜ê²Œ ì„¤ì •
        sheet.setColumnWidth(6, 10000); // Gì—´ ë„ˆë¹„: 10000 = ì•½ 70ì ì •ë„ í‘œì‹œ

        // íŒŒì¼ë¡œ ì €ì¥
        FileOutputStream out = new FileOutputStream("ExcelPagingExample.xlsx");
        workbook.write(out); // ì›Œí¬ë¶ì„ íŒŒì¼ì— ê¸°ë¡
        out.close();         // íŒŒì¼ ë‹«ê¸°
        workbook.close();    // ì›Œí¬ë¶ ë‹«ê¸°

        System.out.println("ì—‘ì…€ íŒŒì¼ì´ ì„±ê³µì ìœ¼ë¡œ ìƒì„±ë˜ì—ˆìŠµë‹ˆë‹¤!");
    }
}
